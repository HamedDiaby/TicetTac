<%- include('header'); %>

<div class="d-flex flex-column align-items-center trips">
    <div class="col-sm-10 col-md-6">
        <h5 class="text-white">My tickets :</h5>
    </div>
    
    <table class="table table-borderless col-sm-10 col-md-10 col-lg-10">
        <thead class="bg-white">
          <tr>
            <th scope="col" class="d-none d-sm-block">N°</th>
            <th scope="col">Journey</th>
            <th scope="col">Date</th>
            <th scope="col">Departure time</th>
            <th scope="col">Price</th>
            <th scope="col">Trash</th>
          </tr>
        </thead>
        <tfoot class="bg-tfoot-basket">
            <tr>
                <th scope="col" class="d-none d-sm-block"></th>
                <th scope="col">Total</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"><%=user.total%> €</th>
                <th scope="col"></th>
            </tr>
        </tfoot>
        <tbody class="bg-white">

          <%for(var i=0; i<mytrips.length; i++){%>

            
            <tr>
              <th scope="row" class="d-none d-sm-block">1</th>
              <td><%=mytrips[i].departure%> / <%=mytrips[i].arrival%></td>
              <td><%=formatDate(mytrips[i].date)%></td>
              <td><%=mytrips[i].departureTime%></td>
              <td><%=mytrips[i].price%> €</td>
              <td class="trash"><a href="/trash?position=<%=i%>"><i class="far fa-trash-alt"></i></a></td>
            </tr>
          <%}%>

        

        </tbody>
    </table>
</div>

    <button type="button" class="confirm btn btn-danger" data-toggle="modal" data-target="#confirm">Confirm</button>
  
  <!-- Modal -->
  <div class="modal fade" id="confirm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">My journey recap</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          
            <ul class="list-group">

              <%for(var i=0; i<mytrips.length; i++){%>

                <li class="list-group-item d-flex justify-content-between align-items-center m-1">
                    <p class="font-weight-bold"><%=mytrips[i].departure%> / <%=mytrips[i].arrival%></p>
                    <small class="text-secondary">train departure at : <%=mytrips[i].departureTime%></small>
                    <label class="font-weight-bold"><%=mytrips[i].price%> €</label>
                </li>
                <%}%>
            </ul>

            <div class="checkout">
                <label>Total : <%=user.total%> €</label>
                <a href="/my-last-trips" class="offset-9 btn btn-outline-danger">Checkout</a>
            </div>

        </div>
      </div>
    </div>
  </div>

  <%- include('footer'); %>

